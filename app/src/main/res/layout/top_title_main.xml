<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <LinearLayout
        android:id="@+id/ll_top_title_main"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

    <ImageView
        android:id="@+id/iv_top_title_back"
        android:src="@drawable/left"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_top_title_tap"
        android:layout_weight="1"
        android:gravity="center"
        android:text="首页"
        android:textSize="25sp"
        android:textColor="@color/home_back_selected"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <ImageView

        android:id="@+id/iv_top_title_setting"
        android:layout_marginRight="15dp"
        android:src="@drawable/my_setting_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:background="@color/more_text"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>
